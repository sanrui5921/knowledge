<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="myBeanPostProcessor" class="org.sunrain.study.spring.demo.demo01.MyBeanPostProcessor"/>
    <bean name="personBean" class="org.sunrain.study.spring.demo.demo01.Person"
          init-method="init" destroy-method="destroyMethod">
        <property name="name" value="Richard Yi"/>
    </bean>
    <bean name="normalPerson" class="org.sunrain.study.spring.demo.demo01.PersonNormalBean"></bean>

</beans>